#9 bodyTextColor;

#4C4 green;
#484 darkGreen;
#373 darkGreen2;
#262 darkGreen3;

#EAA red;
#844 darkRed;
#733 darkRed2;
#622 darkRed3;

@linearGradient mainBg
{
    startColor: #E;
    endColor: #FA;
    endY: 30%;
}

@font baseFont
{
    size: 14;
    color: bodyTextColor;
    face: "Helvetica";

    &@ buttonFont
    {
        size: 16;

        &@ buttonFontGreen { color: darkGreenColor; }
        &@ buttonFontRed { color: darkRedColor; }
    }
}
